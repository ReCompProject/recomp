@using ReComp.Models;
@{
    ViewBag.Title = "Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">

    <!-- Preloader -->
    <div class="preloader"></div>

    <!--Property Info Section-->
    <section class="property-info-section" style="width:75%; margin:auto;">
        <div class="auto-container">

            <div class="row clearfix">
                <!--Left Column-->
                <div class="left-column col-md-6 col-sm-12 col-xs-12">
                    <!--Product Carousel-->
                    <div class="product-carousel-outer">
                        <!--Product image Carousel-->
                        <ul class="prod-image-carousel">
                            @for (var i = 0; i < ViewBag.Project1Image.Count; i++)
                            {
                                Project1Image p1 = ViewBag.Project1Image[i];
                        <li><figure class="image"><a class="lightbox-image option-btn" data-fancybox-group="example-gallery" href="~/Public/images/resource/products/@p1.BigImage" title="Image Title Here"><img src="~/Public/images/resource/products/@p1.BigImage" alt=""></a></figure></li>
                        }
                        </ul>

                        <!--Product Thumbs Carousel-->
                        <div class="prod-thumbs-carousel">
                            @for (var i = 0; i < ViewBag.Project1Image.Count; i++)
                            {
                                Project1Image p1 = ViewBag.Project1Image[i];
                        <div class="thumb-item"><figure class="thumb-box"><img src="~/Public/images/resource/products/@p1.SmallImage" alt=""></figure></div>
                            }
                        </div>

                    </div><!--End Product Carousel-->
                </div><!--Left Column-->
                <!--Right Column-->
                <div class="right-column col-md-6 col-sm-12 col-xs-12">
                    <!--Title Style One-->
                    <div class="title-style-one extended left-aligned">
                        <div class="title"><h2>@ViewBag.Project1.Title</h2></div>
                        <div class="sub-title">@ViewBag.Project1.SubTitle</div>
                    </div>

                    <div class="content">
                        <div class="text">@ViewBag.Project1.MainText</div>

                        <div class="row clearfix">
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <ul class="list-style-one">
                                    <li>@ViewBag.Project1.sec1</li>
                                    <li>@ViewBag.Project1.sec2</li>
                                    <li>@ViewBag.Project1.sec3</li>
                                </ul>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <ul class="list-style-one">
                                    <li>@ViewBag.Project1.sec4</li>
                                    <li>@ViewBag.Project1.sec5</li>
                                    <li>@ViewBag.Project1.sec6</li>
                                </ul>
                            </div>
                        </div>
                        <div class="big-title"><h2>@ViewBag.Project1.Details</h2></div>

                        <div class="links">
                            <a href="#" class="theme-btn btn-style-two"><span class="fa fa-paper-plane"></span>&ensp; Book Now</a>
                        </div>
                    </div>
                </div><!--Right Column-->
            </div>

        </div>
    </section>

    <!--Properties Section-->
    <section class="properties-section-two" style="width:75%; margin:auto;">
        <div class="auto-container">
            <!--Search Style One-->
            <div class="search-style-one extended">
                <div class="search-outer">
                    <div class="form-box search-form">
                        <form method="post" action="http://themexriver.com/shelter/property-grid.html">
                            <div class="row clearfix">
                                <!--Form Group-->
                                <div class="form-group col-md-3 col-sm-6 col-xs-12">
                                    <div class="field-title">Select Your</div>
                                    <div class="field-inner">
                                        <select class="custom-select-box">
                                            <option>Location</option>
                                            <option>Australia</option>
                                            <option>United States</option>
                                            <option>Russia</option>
                                            <option>France</option>
                                        </select>
                                    </div>
                                </div>
                                <!--Form Group-->
                                <div class="form-group col-md-3 col-sm-6 col-xs-12">
                                    <div class="field-title">Select Your</div>
                                    <div class="field-inner">
                                        <select class="custom-select-box">
                                            <option>Min Area</option>
                                            <option>1000 ft2</option>
                                            <option>1500 ft2</option>
                                            <option>2000 ft2</option>
                                            <option>5000 ft2</option>
                                        </select>
                                    </div>
                                </div>
                                <!--Form Group-->
                                <div class="form-group col-md-3 col-sm-6 col-xs-12">
                                    <div class="field-title">Price</div>
                                    <div class="field-inner">
                                        <select class="custom-select-box">
                                            <option>$1000 - 10,000</option>
                                            <option>$10,000 - $100,000</option>
                                            <option>$100,000 - $1,000,000</option>
                                            <option>$1,000,000 - $10,000,0000</option>
                                        </select>
                                    </div>
                                </div>
                                <!--Form Group-->
                                <div class="form-group col-md-3 col-sm-6 col-xs-12">
                                    <div class="field-title">&nbsp;</div>
                                    <div class="field-inner text-right"><button class="theme-btn btn-style-one"><span class="icon fa fa-search"></span>Search</button></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div><!--Search Style One-->

            <div class="search-title"><h3>Found 32 Properties for sell & rent</h3></div>

            <!--Gallery Controls-->
            <div class="gallery-controls clearfix">

                <!--Layout-->
                <div class="layout">
                    <ul class="clearfix">
                        <li><a class="active" href="property-list.html" title="List View"><span class="flaticon-interface"></span></a></li>
                        <li><a href="property-grid.html" title="Grid View"><span class="flaticon-squares"></span></a></li>
                    </ul>
                </div>

                <!--Filter-->
                <div class="filters">
                    <ul class="filter-tabs filter-btns clearfix">
                        <li class="active filter" data-role="button" data-filter="all">All </li>
                        <li class="filter" data-role="button" data-filter=".rent">Rent </li>
                        <li class="filter" data-role="button" data-filter=".sell">Sell </li>
                        <li class="filter" data-role="button" data-filter=".featured">Featured </li>
                    </ul>
                </div>

            </div>

            <div class="big-title"><h2>Sell & rent</h2></div>

            <!--Column Header-->
            <div class="column-header clearfix">
                <div class="title-column">Property name</div>
                <div class="type-column">Type</div>
                <div class="info-column">Info</div>
                <div class="price-column">Price</div>
                <div class="link-column">&nbsp;</div>
            </div>

            <div class="filter-list">
                @for (var i = 0; i < ViewBag.Project2.Count; i++)
                {
                    Project2 p2 = ViewBag.Project2[i];
            <!--Property Block-->
            <div class="property-block-list mix mix_all featured">
                <div class="inner-box clearfix">
                    <div class="title-column">
                        <figure class="image"><a href="property-single.html"><img src="~/Public/images/gallery/@p2.Image" alt=""></a></figure>
                        <h3><a href="property-single.html"><span class="theme_color">@p2.Name1</span> @p2.Name2</a></h3>
                        <div class="location">@p2.Name3</div>
                    </div>
                    <div class="type-column">@p2.Type</div>

                    <div class="info-column">
                        <!--Specs List-->
                        <ul class="specs-list clearfix">
                            <li><div class="outer"><div class="icon"><span class="fa fa-expand"></span></div><div class="info">@p2.Ft</div></div></li>
                            <li><div class="outer"><div class="icon"><span class="fa fa-bed"></span></div><div class="info">@p2.Bed</div></div></li>
                            <li><div class="outer"><div class="icon"><span class="flaticon-shape"></span></div><div class="info">@p2.Bath</div></div></li>
                            <li><div class="outer"><div class="icon"><span class="fa fa-car"></span></div><div class="info">@p2.Garage</div></div></li>
                        </ul>
                    </div>
                    <div class="price-column">@p2.Price</div>
                    <div class="link-column"><a href="property-single.html" class="read-more-link">Details</a></div>

                </div>
            </div>
                }

            </div>

            <br>
            <!-- Styled Pagination -->
            <div class="styled-pagination text-left">
                <ul>
                    <li><a class="prev" href="#"><span class="fa fa-angle-double-left"></span></a></li>
                    <li><a href="#" class="active">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a class="next" href="#"><span class="fa fa-angle-double-right"></span></a></li>
                </ul>
            </div>

        </div>
    </section>

    <!--Properties Section-->
    <section class="properties-section related-properties" style="width:75%; margin:auto;">
        <div class="auto-container">
            <!--Title Style One-->
            <div class="title-style-one extended right-aligned">
                <div class="title"><h2>@ViewBag.Project3Head.Title</h2></div>
                <div class="sub-title">@ViewBag.Project3Head.SubTitle </div>
            </div>

            <!--Carousel-->
            <div class="properties-carousel three-items-carousel">
                @for (var i = 0; i < ViewBag.Project3.Count; i++)
                {
                    Project3 p3 = ViewBag.Project3[i];
            <!--Slide Item-->
            <div class="slide-item">
                <!--Property Block-->
                <div class="property-block-grid">
                    <div class="inner-box">
                        <div class="image-box">
                            <figure class="image"><a href="property-single.html"><img src="~/Public/images/resource/@p3.Image" alt=""></a></figure>
                            <div class="ribbon">Sale</div>
                            <a href="property-single.html" class="read-more-link">Read More</a>
                        </div>
                        <div class="lower-content">
                            <h3><a href="property-single.html">@p3.Title</a></h3>
                            <div class="price">@p3.Price</div>
                            <div class="desc-text">@p3.SubTitle</div>
                            <!--Specs List-->
                            <ul class="specs-list clearfix">
                                <li><div class="outer"><div class="icon"><span class="fa fa-expand"></span></div><div class="info">@p3.Ft</div></div></li>
                                <li><div class="outer"><div class="icon"><span class="fa fa-bed"></span></div><div class="info">@p3.Bed</div></div></li>
                                <li><div class="outer"><div class="icon"><span class="flaticon-shape"></span></div><div class="info">@p3.Bath</div></div></li>
                                <li><div class="outer"><div class="icon"><span class="fa fa-car"></span></div><div class="info">@p3.Garage</div></div></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
                }

            </div>

        </div>
    </section>



    <!--Subscribe Bar / Style Two-->
    <section class="subscribe-bar style-two" style="width:75%; margin:auto;">
    </section>






</div>
<!--End pagewrapper-->
<!--Scroll to top-->
<div class="scroll-to-top scroll-to-target" data-target="html"><span class="icon fa fa-long-arrow-up"></span></div>

